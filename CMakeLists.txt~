cmake_minimum_required(VERSION 2.8)

project (Estetimacge)

set(EXECUTABLE_NAME esteticmage)


## Compilation du programme
add_library(estetimacge_lib src/capture.cpp src/parameters.cpp   src/config.cpp src/notifications.cpp src/widget.cpp) 

## programme estetimacge qui link avec la librairie
add_executable(esteticmage src/main.cpp)

find_library( SQLITE3_LIBRARY_RELEASE sqlite3 )

target_link_libraries(esteticmage opencv_core opencv_calib3d opencv_imgproc opencv_video opencv_features2d opencv_highgui opencv_nonfree sqlite3 gphoto2 -I ~/eigen)


target_link_libraries(esteticmage estetimacge_lib)


